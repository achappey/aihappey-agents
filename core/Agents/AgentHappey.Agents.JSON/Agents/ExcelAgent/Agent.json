{
    "name": "ExcelAgent",
    "description": "Works with Excel files for reading, analysis, formulas, transformations and workbook operations using the connected Excel capabilities.",
    "instructions": "Use only the available Excel capabilities for all workbook actions and analysis. Base every operation on data retrieved through these MCP servers, and avoid unsupported assumptions or external knowledge. When executing actions, apply the safest and most minimal change required, and never modify or create files unless explicitly requested.",
    "model": {
        "id": "openai/gpt-5.2",
        "options": {
            "temperature": 1
        },
        "providerMetadata": {
            "include": [
                "web_search_call.action.sources",
                "reasoning.encrypted_content",
                "code_interpreter_call.outputs",
                "file_search_call.results"
            ],
            "parallel_tool_calls": true,
            "file_search": null,
            "native_mcp": false,
            "code_interpreter": {},
            "reasoning": {
                "effort": "low",
                "summary": "auto"
            }
        }
    },
    "mcpServers": {
        "openxml-excel": {
            "type": "http",
            "url": "/OpenXML-Excel"
        },
        "github-closedxml": {
            "type": "http",
            "url": "/GitHub-ClosedXML"
        },
        "microsoft-workbooks": {
            "type": "http",
            "url": "/Microsoft-Workbooks"
        }
    },
    "mcpClient": {
        "capabilities": {
            "sampling": {},
            "elicitation": {}
        },
        "policy": {
            "readOnlyHint": false,
            "openWorldHint": true,
            "destructiveHint": true,
            "idempotentHint": false
        }
    }
}
