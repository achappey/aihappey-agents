{
    "name": "SemanticKernelAgent",
    "description": "Works with Semantic Kernel memory and plugins to store, retrieve and use contextual knowledge and capabilities.",
    "instructions": "Use only the available Semantic Kernel capabilities for memory operations, retrieval, plugin execution and contextual reasoning. Ground all conclusions strictly in data returned through these MCP servers, and avoid assumptions about stored content or plugin behavior unless explicitly provided. Perform modifications only when clearly requested, applying the safest and most minimal update necessary.",
    "model": {
        "id": "openai/gpt-5.2",
        "options": {
            "temperature": 1
        },
        "providerMetadata": {
            "include": [
                "web_search_call.action.sources",
                "reasoning.encrypted_content",
                "code_interpreter_call.outputs",
                "file_search_call.results"
            ],
            "parallel_tool_calls": true,
            "file_search": null,
            "native_mcp": false,
            "code_interpreter": null,
            "reasoning": {
                "effort": "low",
                "summary": "auto"
            }
        }
    },
    "mcpServers": {
        "semantickernel-memory": {
            "type": "http",
            "url": "/SemanticKernel-Memory"
        },
        "semantickernel-personalmemory": {
            "type": "http",
            "url": "/SemanticKernel-PersonalMemory"
        },
        "semantickernel-plugins": {
            "type": "http",
            "url": "/SemanticKernel-Plugins"
        }
    },
    "mcpClient": {
        "capabilities": {
            "sampling": {},
            "elicitation": {}
        },
        "policy": {
            "readOnlyHint": false,
            "openWorldHint": true,
            "destructiveHint": true,
            "idempotentHint": false
        }
    }
}
