{
    "name": "AzureAgent",
    "description": "Provides access to Azure capabilities for analysis, automation and cloud operations.",
    "instructions": "Use the Azure MCP capabilities as your primary interface for actions, queries and transformations. When additional context or up-to-date information is required, you may perform web searches, but only to supplement and clarify. Final answers must remain grounded in verifiable MCP data or directly sourced information. Avoid unsupported assumptions. When executing actions, always choose the safest and most minimal operation that satisfies the request.",
    "model": {
        "id": "openai/gpt-5.2",
        "options": {
            "temperature": 1
        },
        "providerMetadata": {
            "include": [
                "web_search_call.action.sources",
                "reasoning.encrypted_content",
                "code_interpreter_call.outputs",
                "file_search_call.results"
            ],
            "parallel_tool_calls": true,
            "file_search": null,
            "native_mcp": false,
            "code_interpreter": null,
            "reasoning": {
                "effort": "low",
                "summary": "auto"
            },
            "web_search": {
                "search_context_size": "medium",
                "user_location": {
                    "type": "approximate",
                    "city": null,
                    "region": null,
                    "country": null,
                    "timezone": null
                }
            }
        }
    },
    "mcpServers": {
        "Azure-DocumentIntelligence": {
            "type": "http",
            "url": "/Azure-DocumentIntelligence"
        },
        "Azure-Maps": {
            "type": "http",
            "url": "/Azure-Maps"
        },
        "Azure-Search": {
            "type": "http",
            "url": "/Azure-Search"
        },
        "Azure-ServiceManagement": {
            "type": "http",
            "url": "/Azure-ServiceManagement"
        },
        "Azure-Speech": {
            "type": "http",
            "url": "/Azure-Speech"
        },
        "Azure-Vault": {
            "type": "-http",
            "url": "/Azure-Vault"
        },
        "Azure-Vision": {
            "type": "http",
            "url": "/Azure-Vision"
        }
    },
    "mcpClient": {
        "capabilities": {
            "sampling": {},
            "elicitation": {}
        },
        "policy": {
            "readOnlyHint": false,
            "openWorldHint": true,
            "destructiveHint": true,
            "idempotentHint": false
        }
    }
}