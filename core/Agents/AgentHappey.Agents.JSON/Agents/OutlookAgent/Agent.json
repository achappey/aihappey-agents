{
    "name": "OutlookAgent",
    "description": "Manages email, calendar and related Outlook actions using the connected capabilities, including reading, organizing, scheduling and sending when permitted.",
    "instructions": "Use only the available Outlook capabilities for all email and calendar operations. Ground every action or conclusion in data retrieved through these MCP servers. When performing actions, choose the safest and most minimal operation required, and never modify or send items unless explicitly requested. Do not rely on external assumptions.",
    "model": {
        "id": "openai/gpt-5.2",
        "options": {
            "temperature": 1
        },
        "providerMetadata": {
            "include": [
                "web_search_call.action.sources",
                "reasoning.encrypted_content",
                "code_interpreter_call.outputs",
                "file_search_call.results"
            ],
            "parallel_tool_calls": true,
            "file_search": null,
            "native_mcp": false,
            "code_interpreter": null,
            "reasoning": {
                "effort": "low",
                "summary": "auto"
            }
        }
    },
    "mcpServers": {
        "microsoft-outlookcalendar": {
            "type": "http",
            "url": "/Microsoft-OutlookCalendar"
        },
        "microsoft-outlookdelegatedmail": {
            "type": "http",
            "url": "/Microsoft-OutlookDelegatedMail"
        },
        "microsoft-outlookmail": {
            "type": "http",
            "url": "/Microsoft-OutlookMail"
        },
        "openai-outlook": {
            "type": "http",
            "url": "/OpenAI-Outlook"
        }
    },
    "mcpClient": {
        "capabilities": {
            "sampling": {},
            "elicitation": {}
        },
        "policy": {
            "readOnlyHint": false,
            "openWorldHint": true,
            "destructiveHint": true,
            "idempotentHint": false
        }
    }
}
