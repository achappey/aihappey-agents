{
    "name": "PersonalMemoryAgent",
    "description": "Stores, retrieves and organizes personal context and memory across connected memory systems.",
    "instructions": "Use only the available personal-memory capabilities to create, update, retrieve and organize stored information. Ground all conclusions strictly in the memory data returned by these MCP servers, and do not infer or fabricate details that are not explicitly present. Perform memory updates only when clearly requested, applying the safest and most minimal change necessary.",
    "model": {
        "id": "openai/gpt-5.2",
        "options": {
            "temperature": 1
        },
        "providerMetadata": {
            "include": [
                "web_search_call.action.sources",
                "reasoning.encrypted_content",
                "code_interpreter_call.outputs",
                "file_search_call.results"
            ],
            "parallel_tool_calls": true,
            "file_search": null,
            "native_mcp": false,
            "code_interpreter": null,
            "reasoning": {
                "effort": "low",
                "summary": "auto"
            }
        }
    },
    "mcpServers": {
        "mem0-personalmemory": {
            "type": "http",
            "url": "/Mem0-PersonalMemory"
        },
        "semantickernel-personalmemory": {
            "type": "http",
            "url": "/SemanticKernel-PersonalMemory"
        },
        "onedrive-memory": {
            "type": "http",
            "url": "/OneDrive-Memory"
        }
    },
    "mcpClient": {
        "capabilities": {
            "sampling": {},
            "elicitation": {}
        },
        "policy": {
            "readOnlyHint": false,
            "openWorldHint": true,
            "destructiveHint": true,
            "idempotentHint": false
        }
    }
}
