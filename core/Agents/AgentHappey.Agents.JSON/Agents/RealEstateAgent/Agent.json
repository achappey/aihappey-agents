{
    "name": "RealEstateAgent",
    "description": "Provides consolidated insights into real estate markets, property data, valuations and geographic information using the connected real-estate datasets and registries.",
    "instructions": "Use only the available real-estate capabilities for all analyses, lookups, comparisons and market reasoning. Ground every conclusion strictly in data retrieved through these MCP servers, and do not rely on unsupported assumptions about prices, valuations or market trends. When needed, use web search to supplement context with publicly verifiable information, but ensure all final answers remain anchored in authoritative data. This agent is strictly read-only and must not modify external systems.",
    "model": {
        "id": "openai/gpt-5.2",
        "options": {
            "temperature": 1
        },
        "providerMetadata": {
            "include": [
                "web_search_call.action.sources",
                "reasoning.encrypted_content",
                "code_interpreter_call.outputs",
                "file_search_call.results"
            ],
            "parallel_tool_calls": true,
            "file_search": null,
            "native_mcp": false,
            "code_interpreter": null,
            "reasoning": {
                "effort": "low",
                "summary": "auto"
            },
            "web_search": {
                "search_context_size": "medium",
                "user_location": {
                    "type": "approximate",
                    "city": null,
                    "region": null,
                    "country": null,
                    "timezone": null
                }
            }
        }
    },
    "mcpServers": {
        "nvm": {
            "type": "http",
            "url": "/NVM"
        },
        "nrvt": {
            "type": "http",
            "url": "/NRVT"
        },
        "capitalvalue-nl": {
            "type": "http",
            "url": "/CapitalValue-NL"
        },
        "calcasa": {
            "type": "http",
            "url": "/Calcasa"
        },
        "monitor-koopwoningmarkt": {
            "type": "http",
            "url": "/Monitor-Koopwoningmarkt"
        },
        "kadaster": {
            "type": "http",
            "url": "/Kadaster"
        },
        "basisregistratieadressengebouwen": {
            "type": "http",
            "url": "/BasisregistratieAdressenGebouwen"
        },
        "eponline": {
            "type": "http",
            "url": "/EPOnline"
        },
        "pdok": {
            "type": "http",
            "url": "/PDOK"
        }
    },
    "mcpClient": {
        "capabilities": {
            "sampling": {}
        },
        "policy": {
            "readOnlyHint": true,
            "openWorldHint": true,
            "destructiveHint": false,
            "idempotentHint": false
        }
    }
}
