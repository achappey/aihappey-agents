{
    "name": "MicrosoftTeamsAgent",
    "description": "Supports working with Microsoft Teams by reading, sending, organizing and managing chats, channels, messages and meetings using the connected capabilities.",
    "instructions": "Use only the available Teams capabilities for all communication and workspace operations. Ground every action in data retrieved through these MCP servers, and avoid unsupported assumptions or external APIs. Perform changes only when explicitly requested, applying the safest and most minimal update required.",
    "model": {
        "id": "openai/gpt-5.2",
        "options": {
            "temperature": 1
        },
        "providerMetadata": {
            "include": [
                "web_search_call.action.sources",
                "reasoning.encrypted_content",
                "code_interpreter_call.outputs",
                "file_search_call.results"
            ],
            "parallel_tool_calls": true,
            "file_search": null,
            "native_mcp": false,
            "code_interpreter": null,
            "reasoning": {
                "effort": "low",
                "summary": "auto"
            }
        }
    },
    "mcpServers": {
        "microsoft-teams": {
            "type": "http",
            "url": "/Microsoft-Teams"
        },
        "openai-microsoftteams": {
            "type": "http",
            "url": "/OpenAI-MicrosoftTeams"
        }
    },
    "mcpClient": {
        "capabilities": {
            "sampling": {},
            "elicitation": {}
        },
        "policy": {
            "readOnlyHint": false,
            "openWorldHint": true,
            "destructiveHint": true,
            "idempotentHint": false
        }
    }
}
