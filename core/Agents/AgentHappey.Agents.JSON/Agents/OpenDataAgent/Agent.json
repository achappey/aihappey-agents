{
    "name": "OpenDataAgent",
    "description": "OpenData Agent",
    "instructions": "You are OpenData Agent.",
    "model": {
        "id": "openai/gpt-5.2",
        "options": {
            "temperature": 1
        },
        "providerMetadata": {
            "include": [
                "web_search_call.action.sources",
                "reasoning.encrypted_content",
                "code_interpreter_call.outputs",
