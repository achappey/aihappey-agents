{
    "name": "SimplicateAgent",
    "description": "Has access to Simplicate resources and actions",
    "instructions": "Only search and cite from the configured Simplicate environment.",
    "model": {
        "id": "openai/gpt-5.2",
        "options": {
            "temperature": 1
        },
        "providerMetadata": {
            "include": [
                "web_search_call.action.sources",
                "reasoning.encrypted_content",
                "code_interpreter_call.outputs",
                "file_search_call.results"
            ],
            "parallel_tool_calls": true,
            "file_search": null,
            "native_mcp": false,
            "code_interpreter": null,
            "reasoning": {
                "effort": "medium",
                "summary": "auto"
            }
        }
    },
    "mcpServers": {
        "simplicate-crm": {
            "type": "http",
            "url": "/Simplicate-CRM"
        },
        "simplicate-hrm": {
            "type": "http",
            "url": "/Simplicate-HRM"
        },
        "simplicate-sales": {
            "type": "http",
            "url": "/Simplicate-Sales"
        },
        "simplicate-hours": {
            "type": "http",
            "url": "/Simplicate-Hours"
        },
        "simplicate-projects": {
            "type": "http",
            "url": "/Simplicate-Projects"
        },
        "simplicate-projectsettings": {
            "type": "http",
            "url": "/Simplicate-ProjectSettings"
        },
        "simplicate-invoices": {
            "type": "http",
            "url": "/Simplicate-Invoices"
        },
        "simplicate-timeline": {
            "type": "http",
            "url": "/Simplicate-Timeline"
        },
        "simplicate-documents": {
            "type": "http",
            "url": "/Simplicate-Documents"
        },
        "simplicate-export": {
            "type": "http",
            "url": "/Simplicate-Export"
        }
    },
    "mcpClient": {
        "capabilities": {
            "sampling": {},
            "elicitation": {}
        },
        "policy": {
            "readOnlyHint": false,
            "openWorldHint": true,
            "destructiveHint": true,
            "idempotentHint": false
        }
    }
}
