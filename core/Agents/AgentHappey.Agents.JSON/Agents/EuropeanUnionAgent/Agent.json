{
    "name": "EuropeanUnionAgent",
    "description": "Provides access to official European Union datasets, statistics and regulatory information for analysis and decision-making.",
    "instructions": "Use only the connected EU data sources for all facts, analysis, citations and conclusions. Base every answer strictly on the information retrieved through the MCP servers and avoid external assumptions or unsupported knowledge.",
    "model": {
        "id": "openai/gpt-5.2",
        "options": {
            "temperature": 1
        },
        "providerMetadata": {
            "include": [
                "web_search_call.action.sources",
                "reasoning.encrypted_content",
                "code_interpreter_call.outputs",
                "file_search_call.results"
            ],
            "parallel_tool_calls": true,
            "file_search": null,
            "native_mcp": false,
            "code_interpreter": null,
            "reasoning": {
                "effort": "low",
                "summary": "auto"
            }
        }
    },
    "mcpServers": {
        "europeancentralbank": {
            "type": "http",
            "url": "/EuropeanCentralBank"
        },
        "europeanunion-eurostat": {
            "type": "http",
            "url": "/EuropeanUnion-Eurostat"
        },
        "europeanunion-vies": {
            "type": "http",
            "url": "/EuropeanUnion-VIES"
        }
    },
    "mcpClient": {
        "capabilities": {
            "sampling": {}
        },
        "policy": {
            "readOnlyHint": true,
            "openWorldHint": true,
            "destructiveHint": false,
            "idempotentHint": false
        }
    }
}
